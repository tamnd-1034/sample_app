<% provide :title, t(".title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>
        <%= t ".microposts_feed" %>
      </h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".content_3" %></h1>
    <h2>
      <%= t ".content_1" %>
      <% link_to t(".link_title_1"), Settings.link.home.link_1 %>
      <%= t ".content_2" %>
    </h2>
    <%= link_to t(".link_title_2"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("kitten.jpg", alt: t(".link_title_3"), width: "100%"), Settings.link.home.link_1 %>
<% end %>

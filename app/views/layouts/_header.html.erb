<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo_content"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".link_title_home_page"), root_path %></li>
        <li><%= link_to t(".link_title_help_page"), help_path %></li>
        <% if logged_in? %>
          <li>
            <%= link_to t(".users"), users_path %>
          </li>
          <li class="dropdown">
            <%= link_to("#", class: "dropdown-toggle", "data-toggle": "dropdown" ) do %>
              <%= t ".account" %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t(".profile_btn"), current_user %>
              </li>
              <li>
                <%= link_to t(".setting_btn"), edit_user_path(current_user) %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out_btn"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in_btn"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

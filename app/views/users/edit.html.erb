<% provide :title, t(".title") %>
<% provide :button_text, t(".change_avatar") %>
<h1>
  <%= t ".update_profile" %>
</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".change_avatar"), Settings.link.user.edit.gravatar_link, target: "blank" %>
    </div>
  </div>
</div>
